APP_NAME="HelpDesk Kemlu"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

# ============================================================================
# APPLICATION SETTINGS - HelpDesk Kemlu Configuration
# ============================================================================
APP_LOCALE=id
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=id_ID

# Indonesian timezone for government operations
APP_TIMEZONE=Asia/Jakarta
APP_LOCALE_TIMEZONE=Asia/Jakarta

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=4

# Broadcasting disabled - using polling-based notification system
BROADCAST_CONNECTION=null

# File upload settings for ticket attachments
FILE_UPLOAD_MAX_SIZE=10240
FILE_UPLOAD_ALLOWED_MIMETYPES=jpg,jpeg,png,pdf,doc,docx,xls,xlsx,txt,zip,rar
FILE_UPLOAD_DISK=public
FILE_STORAGE_PATH=uploads/tickets

# Application specific settings
PAGINATION_PER_PAGE=15
TICKET_AUTO_CLOSE_DAYS=30
NOTIFICATION_REMINDER_HOURS=24

BCRYPT_ROUNDS=12

# ============================================================================
# DEVELOPMENT SETTINGS - HelpDesk Kemlu Development Configuration
# ============================================================================
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Enhanced logging for development and monitoring
LOG_DAILY_FILES=true
LOG_MAX_FILES=30
LOG_SQL_QUERIES=false
LOG_REQUEST_DETAILS=true
LOG_EXCEPTIONS=true

# Cache configuration for development
CACHE_STORE=database
CACHE_PREFIX=helpdesk_kemlu_
CACHE_DEFAULT_TTL=3600
CACHE_TAGS_ENABLED=true

# Queue settings for development
QUEUE_CONNECTION=database
QUEUE_FAILED_DRIVER=database-uuids
QUEUE_RETRY_AFTER=90
QUEUE_TIMEOUT=60

# Queue worker settings for email processing
QUEUE_WORKER_SLEEP=3
QUEUE_WORKER_MAX_JOBS=1000
QUEUE_WORKER_TIMEOUT=60
QUEUE_WORKER_TRIES=3
QUEUE_WORKER_STOP_WHEN_EMPTY=false

# Development specific settings
DEBUG_BAR_ENABLED=true
TELESCOPE_ENABLED=true
CLOCKWORK_ENABLED=false
IGNITION_ENABLED=true

# Debugbar Security Settings
DEBUGBAR_STORAGE_ENABLED=false
DEBUGBAR_OPEN_STORAGE=false
DEBUGBAR_ALLOW_REMOTE=false

# Performance monitoring
PERFORMANCE_MONITORING=false
QUERY_DETECTOR=true
DUPLICATE_QUERY_DETECTOR=true

# API rate limiting for development
API_RATE_LIMIT_PER_MINUTE=1000
API_RATE_LIMIT_BURST=2000

# Maintenance and backup settings
MAINTENANCE_AUTO_DISCOVERY=true
BACKUP_DISK=local
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=30

# Testing configuration
TESTING_CACHE_STORE=array
TESTING_QUEUE_CONNECTION=sync
TESTING_MAIL_MAILER=array

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=helpdesk_kemlu
DB_USERNAME=root
DB_PASSWORD=

# Database charset and collation for Indonesian content
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci

# Connection options for MySQL 8.0+
DB_PREFIX=
DB_STRICT=true

# Connection pooling and performance settings
DB_POOL=min:2,max:10,timeout:30,acquire:60
DB_OPTIONS="--default-auth=mysql_native_password --wait_timeout=28800 --interactive_timeout=28800 --sql_mode=STRICT_TRANS_TABLES,NO_ZERO_DATE,NO_ZERO_IN_DATE,ERROR_FOR_DIVISION_BY_ZERO"

# SSL and security settings for production
DB_SSL=false
DB_SSL_VERIFY=false
DB_SSL_CA=
DB_SSL_CERT=
DB_SSL_KEY=
DB_SSL_CIPHER=

# Database timezone for Indonesian operations
DB_TIMEZONE=+07:00

# ============================================================================
# SECURITY SETTINGS - HelpDesk Kemlu Security Configuration
# ============================================================================
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=null
SESSION_SECURE_COOKIE=true
SESSION_SAME_SITE=lax

# CSRF Protection Settings
CSRF_COOKIE_NAME=helpdesk_csrf_token
CSRF_TOKEN_TTL=3600

# Rate Limiting for Authentication
AUTH_RATE_LIMIT_ATTEMPTS=5
AUTH_RATE_LIMIT_DECAY=900
AUTH_LOCKOUT_DURATION=3600

# Account Security Settings
ACCOUNT_LOCKOUT_THRESHOLD=5
ACCOUNT_LOCKOUT_DURATION=3600
PASSWORD_RESET_EXPIRE=60
TWO_FACTOR_ENABLED=false

# Security Headers and CORS
SECURITY_HEADERS_ENABLED=true
CORS_ALLOWED_ORIGINS="http://localhost:3000,http://127.0.0.1:3000,http://localhost:8000"
CORS_ALLOWED_METHODS="GET,POST,PUT,PATCH,DELETE,OPTIONS"
CORS_ALLOWED_HEADERS="X-Requested-With,Content-Type,X-Token-Auth,Authorization,X-CSRF-TOKEN"
CORS_EXPOSED_HEADERS="X-CSRF-TOKEN"
CORS_MAX_AGE=86400
CORS_CREDENTIALS=true

# Content Security Policy
CSP_DEFAULT_SRC="'self'"
CSP_SCRIPT_SRC="'self','unsafe-inline','unsafe-eval'"
CSP_STYLE_SRC="'self','unsafe-inline'"
CSP_IMG_SRC="'self',data:,https:"
CSP_CONNECT_SRC="'self'"
CSP_FONT_SRC="'self',data:"
CSP_OBJECT_SRC="'none'"
CSP_BASE_URI="'self'"

# BROADCAST_CONNECTION is set to null above
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database
# CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# ============================================================================
# MAIL CONFIGURATION - Kemlu HelpDesk System
# ============================================================================
# SMTP Configuration for Email Notifications
# Configure these settings with your SMTP provider credentials
MAIL_MAILER=smtp
MAIL_HOST=your-smtp-host.com
MAIL_PORT=587
MAIL_USERNAME=your-email@domain.com
MAIL_PASSWORD=your-app-password
MAIL_ENCRYPTION=tls

# Email sending configuration
MAIL_FROM_ADDRESS=noreply@helpdesk-kemlu.go.id
MAIL_FROM_NAME="${APP_NAME}"

# Queue Configuration for Email Processing
QUEUE_CONNECTION=database

# Mail queue settings for notification management
MAIL_QUEUE_CONNECTION=database
MAIL_QUEUE_NAME=helpdesk-notifications

# Additional mail settings for Indonesian government context
MAIL_REPLY_TO="helpdesk@kemlu.go.id"
MAIL_BCC_ADMIN="admin.helpdesk@kemlu.go.id"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"
